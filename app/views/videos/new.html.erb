<h2>Upload a new one.</h2>

<%= form_for @video do |f| %>
  <ul class="errors"></ul>
  <%= f.text_field :title, placeholder: "Title", required: true, class: "video-title-field" %>
  <%= f.file_field :video, required: true, accept: 'video/mp4', class: "video-file-field" %>
  <div class="progress">
      <div class="bar" style="width: 0%;"></div>
      <div class="remaining-seconds">0s</div>
  </div>
<% end %>
<%= submit_tag "Upload", data: { disable_with: 'Uploading' }, disabled: true, id: "submit-video" %>